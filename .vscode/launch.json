
{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug GTK4 App",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/build/src/llog", // Adjust path to your executable
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}
